{
  "name": "Spartan GPA Calculator",
  "description": "GPA Calculator for Michigan State University Students",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_scripts": [
    {
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [],
  "action": {
    "default_title": "Spartan GPA Calculator",
    "default_popup": "popup.html",
    "default_icon": {
      "50": "/icons/50x.png",
      "100": "/icons/100x.png"
    }
  },
  "icons": {
    "50": "/icons/50x.png",
    "100": "/icons/100x.png"
  }
}